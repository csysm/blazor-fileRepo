<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Size</th>
            <th>fileName</th>
            <th>uploadTime</th>
            <th>fileType</th>
            <th>download</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in fileListDto.CurrentPageFiles)
        {
            <tr>
                <td>@Math.Round((file.FileSize/1_048_576),2)MB</td>
                <td>@file.FileName</td>
                <td>@file.CreateTime</td>
                <td>@file.Suffix</td>
                <td><a class="link-info" @onclick=@(async()=>await Download_ClickAsync(file.Id.ToString(),$"{file.FileName}.{file.Suffix}"))>download</a></td>
                <td><a class="link-danger" @onclick=@(async()=>await Delete_ClickAsync(file.Id.ToString()))>delete</a></td>
            </tr>
        }
    </tbody>
    
</table>

<footer style="text-align: center;">
    <Pagination Current="@CurrentPageIndex" OnChange="OnPageChange" PageSize="15" DefaultPageSize="15" Total="@fileListDto.TotalCount" />
    Page: @CurrentPageIndex
</footer>
  





